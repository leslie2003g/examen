{{> header}}
<div class="container">
    <h1>Pintores</h1>
    {{#if pintores}}
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Nombre</td>
                    <td>Nacionalidad</td>
                    <td>Lugar de Nacimiento</td>
                    <td>Año de Nacimiento</td>
                    <td>Pintura más Famosa</td>
                </tr>
            </thead>
            <tbody>
                {{#each pintores}}
                <tr>
                    <td>{{_id}}</td>
                    <td>{{nombre}}</td>
                    <td>{{nacionalidad}}</td>
                    <td>{{lugar}}</td>
                    <td>{{año}}</td>
                    <td><img src="../images/{{pintura}}"> </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <div>No se encuentran pintores</div>
    {{/if}}
</div>